
@model List<Service>


<div class="row" id="services-container">
    <h3>@(Model[0].Type.Type+"s")</h3>
    @foreach (var service in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img class="card-img-top" src="/Images/@service.Image" alt="@service.Name">
                <div class="card-body">
                    <h5 class="card-title">@service.Name</h5>
                    <p class="card-text">@service.Description</p>
                    <p class="card-text">@service.Type.Type</p>
                    <div class="rating">
                        @for (int i = 0; i < service.Rate; i++)
                        {
                            <span class="fa fa-star checked" style="color:gold"></span>
                        }
                        @for (int i = service.Rate; i < 5; i++)
                        {
                            <span class="fa fa-star"></span>
                        }
                    </div>
                    <a href="@Url.Action("Details", "Service", new { id = service.Id })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>

